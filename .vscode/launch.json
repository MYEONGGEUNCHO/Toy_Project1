    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "RUN: Koscom Realtime Producer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app/main.py",
            "console": "integratedTerminal",
            "args": [
                "koscom-realtime-producer"
                , "-g"
                , "nggroup2"
                , "-d"
            ]
          },
    ]
}